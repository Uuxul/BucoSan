<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ActivarCuentaActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar cuenta"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Instrucciones -->
    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Introduce el código que enviamos a tu correo electrónico"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para código -->
    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:background="@drawable/rounded_bg"
        android:hint="Código de verificación"
        android:inputType="number"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="50dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInstrucciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón confirmar -->
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:backgroundTint="#C0E6FD"
        android:text="Confirmar"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etCodigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reenviar código -->
    <TextView
        android:id="@+id/tvReenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No recibiste el código? Reenviar"
        android:textSize="14sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#029BFD"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnConfirmar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
