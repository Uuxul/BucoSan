<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="171dp"
            android:layout_height="165dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/circulo"
            android:contentDescription="Foto de perfil"
            android:scaleType="centerCrop"
            android:src="@drawable/perfil" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de Usurio:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User_Admin"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electronico:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+52 999-999-9999"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Direccion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/txtDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle 0 x 0 y 0 No 0"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTADO DEL PAQUETE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvStatusContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando estado del contrato..."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCancelarContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR PAQUETE"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />
        <Button
            android:id="@+id/btnregresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>