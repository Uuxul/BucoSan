<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".RecuperacionCuenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tituloRecuperacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Recuperar Cuenta"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


        <ImageView
            android:layout_width="160dp"
            android:layout_height="151dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/recuperar" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese su correo o teléfono para recuperar su cuenta"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:padding="4dp" />


        <EditText
            android:id="@+id/emailRecuperacion"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/rounded_bg"
            android:hint="Ej: usuario@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/btnRecuperar"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:backgroundTint="#C0E6FD"
            android:padding="12dp"
            android:text="Recuperar cuenta"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtVolverLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Volver al inicio de sesión"
            android:textColor="#029BFD"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
